# Push and pop directories on directory stack
alias pu='pushd'
alias po='popd'

# Basic directory operations
alias ...= 'cd ../..'
alias ....= 'cd ../../..'
alias -- -= 'cd -'

# Show history
alias history='fc -il 1'

# List direcory contents
alias ls='ls --color=auto'
alias lsa='ls -lah'
alias ll='ls -lah'
alias l='ls -lh'
alias la='ls -lAh'

alias g='git'

